#!/bin/sh

set -e

type UserRequireRoot >/dev/null 2>&1 || \
	. "/usr/local/share/myx.common/bin/user/requireRoot"

InstallUserGroupMembership(){
	UserRequireRoot "lib/installUserGroupMembership"

	local NAME="$1"; shift;
	local GROUPS="$@"

	test -n "$NAME" || ( echo "â›” ERROR: InstallUserGroupMembership: username is required!" >&2 ; exit 1 )
	if test -z "$GROUPS" ; then
		echo "ðŸ™‹ WARNING: InstallUserGroupMembership: groupname is taken from username ($NAME)!" >&2
		GROUPS="$NAME"
	fi
	
	pwd_mkdb /etc/master.passwd
	
	for GROUP in $GROUPS ; do
		pw groupshow "$GROUP" || pw groupadd -n "$GROUP"
		pw groupmod "$GROUP" -m "$NAME"
	done

	pwd_mkdb /etc/master.passwd
}

case "$0" in
	*/myx.common/bin/lib/installUserGroupMembership) 
		if [ -z "$1" ] ; then
			echo "Syntax: myx.common lib/installUserGroupMembership username [group1 [group2...]]" >&2
			exit 1
		fi
		set -e
		InstallUserGroupMembership "$@"
	;;
esac
